         <Label x:Name="grdLinescore105" Text="" Grid.Row="2" Grid.Column="5" Style="{StaticResource LineScoreItem}" />
         <Label x:Name="grdLinescore106" Text="" Grid.Row="2" Grid.Column="6" Style="{StaticResource LineScoreItem}" />
         <Label x:Name="grdLinescore107" Text="" Grid.Row="2" Grid.Column="7" Style="{StaticResource LineScoreItem}" />
         <Label x:Name="grdLinescore108" Text="" Grid.Row="2" Grid.Column="8" Style="{StaticResource LineScoreItem}" />
         <Label x:Name="grdLinescore109" Text="" Grid.Row="2" Grid.Column="9" Style="{StaticResource LineScoreItem}" />

         <Label x:Name="grdRHE10" Text="0" Grid.Row="2" Grid.Column="11" Style="{StaticResource LineScoreItem}" />
         <Label x:Name="grdRHE11" Text="0" Grid.Row="2" Grid.Column="12" Style="{StaticResource LineScoreItem}" />
         <Label x:Name="grdRHE12" Text="0" Grid.Row="2" Grid.Column="13" Style="{StaticResource LineScoreItem}" />


      </Grid> <!-- Linescore -->

<!-- Start new stuff -->

        <!-- ==========================================================
         This grid has 2 columns: 
           (1) Main field graphic & Results
           (2) Box score & Disk
       
         Both colums have 2 rows, but this is nit a 2x2 grid, 
         because the hieght of the 2 elts is diff in col0 vs col1.
        =========================================================== -->

        <!-- Main panel-->
      <Grid Padding="0" BackgroundColor="White" Grid.Row="2" >

         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
         </Grid.ColumnDefinitions>
            
         <!-- Left side -->
         <Grid Grid.Column="0" >

            <Grid.RowDefinitions>
               <RowDefinition Height="1.4*" />
               <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Main field graphic -->
            <AbsoluteLayout BackgroundColor="Green" Grid.Row="0">
               <Image  x:Name="imgDiamond" Source="test9.png" Aspect="AspectFit" 
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"
               AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
               AbsoluteLayout.LayoutFlags="All" />

               <!-- ======================
               Out balls
               ====================== -->
               <Label Text="Outs" 
                  AbsoluteLayout.LayoutBounds=".16, .80, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />
               <Image  x:Name="lblOuts1" Source="whtball"  
                  AbsoluteLayout.LayoutBounds=".10, .92, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />
               <Image  x:Name="lblOuts2" Source="whtball" 
                  AbsoluteLayout.LayoutBounds=".18, .92, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />
               <Image  x:Name="lblOuts3" Source="whtball" 
                  AbsoluteLayout.LayoutBounds=".26, .92, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />


               <!-- ======================
               Fielders
               ====================== -->

               <Label x:Name="lblFielder1" Text="" 
                  AbsoluteLayout.LayoutBounds=".5, .70, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />

               <Label x:Name="lblFielder2" Text="" 
                  AbsoluteLayout.LayoutBounds=".5, 1.0, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />

               <Label x:Name="lblFielder3" Text="" 
                  AbsoluteLayout.LayoutBounds=".7, .55, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />

               <Label x:Name="lblFielder4" Text="" 
                  AbsoluteLayout.LayoutBounds=".7, .37, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />

               <Label x:Name="lblFielder5" Text="" 
                  AbsoluteLayout.LayoutBounds=".3, .55, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />

               <Label x:Name="lblFielder6" Text="" 
                  AbsoluteLayout.LayoutBounds=".33, .37, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />

               <Label x:Name="lblFielder7" Text="" 
                  AbsoluteLayout.LayoutBounds=".15, .2, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />

               <Label x:Name="lblFielder8" Text="" 
                  AbsoluteLayout.LayoutBounds=".5, .08, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />

               <Label x:Name="lblFielder9" Text="" 
                  AbsoluteLayout.LayoutBounds=".85, .2, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" />


               <!-- ======================
               Runners
               ====================== -->

               <Label x:Name="lblRunner1" Text="" 
                  AbsoluteLayout.LayoutBounds=".70, .62, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional"
                  Style="{StaticResource BaseRunner}" />

               <Label x:Name="lblRunner2" Text="" 
                  AbsoluteLayout.LayoutBounds=".5, .46, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" 
                  Style="{StaticResource BaseRunner}" />

               <Label x:Name="lblRunner3" Text="" TextColor="Yellow" FontAttributes="Bold"
                  AbsoluteLayout.LayoutBounds=".3, .62, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional"
                  Style="{StaticResource BaseRunner}"/>

               <Label x:Name="lblBatter" Text="" 
                  AbsoluteLayout.LayoutBounds=".5, .88, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional"
                  Style="{StaticResource BaseRunner}"/>

            </AbsoluteLayout>


            <!--=================================================
               Results ...
               ==================================================-->

            <AbsoluteLayout BackgroundColor="#EFE4B0" Grid.Row="1">

               <ScrollView  
                  VerticalScrollBarVisibility="Always" 
                  AbsoluteLayout.LayoutBounds="0.0, 0.0, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" >
                  <Label 
                     x:Name="txtResults" Text="Results" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"  
                     FontSize="Small" HorizontalTextAlignment="Start"
                     TextColor="Black" FontAttributes="Bold"
                     BackgroundColor="#EFE4B0" 
                     Margin="0" >
                  </Label>
               </ScrollView>

               <ActivityIndicator 
                  x:Name="Activity2" 
                  AbsoluteLayout.LayoutBounds=".5, .5, AutoSize, AutoSize" 
                  AbsoluteLayout.LayoutFlags="PositionProportional" 
                  Color="Blue" 
                  IsVisible="false" IsEnabled="True" IsRunning="false" />

            </AbsoluteLayout>

         </Grid>
         <!-- End left side -->

         <!-- Start right side -->
         <Grid Grid.Column="1" > 

            <Grid.RowDefinitions>
               <RowDefinition Height="1.6*" />
               <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--(1) Box score...-->
                    
            <!-- Start box score -->
            <StackLayout Padding="0" Spacing="30" BackgroundColor="Black" Grid.Row="0">

               <!-- Start home / visitor tabs -->
               <Grid Padding="0" BackgroundColor="Black" >
                  <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="*" />
                     <ColumnDefinition Width="*" />
                     <ColumnDefinition Width="*" />
                  </Grid.ColumnDefinitions>
                  <Grid.RowDefinitions>
                     <RowDefinition Height="30" />
                  </Grid.RowDefinitions>

                  <Button x:Name="btnBatBoxVis"  Text="{Binding VisName}" Padding="0" Margin="0" Clicked="btnVisBox_Clicked" BackgroundColor="White" Grid.Column="0" HorizontalOptions="FillAndExpand"/>
                  <Button x:Name="btnPitBoxHome" Text="{Binding HomeName}" Padding="0" Margin="0" Clicked="btnHomeBox_Clicked" BackgroundColor="Gray" Grid.Column="1" HorizontalOptions="FillAndExpand"/>
                  <Button x:Name="btnPitBox"  Text="Pitching" Padding="0" Margin="0" Clicked="btnVisBox_Clicked" BackgroundColor="White" Grid.Column="0" HorizontalOptions="FillAndExpand"/>

                  <!-- End home / visitor tabs -->
               </Grid>
            </StackLayout>

            <StackLayout 
               Orientation="Vertical"
               Padding="30,24,30,24" 
               Spacing="10" 
               Grid.Row= "1"
               IsVisible="true">
                    
               <!--ListView #1 == Batters ===================================== -->
               <Label Text="Yankees" FontAttributes="Bold" FontSize="Large"/>
               <ListView 
                  x:Name= "lstBatBoxBoth"
                  ItemsSource="{Binding BatterBoxVis}" 
                  SelectionMode="Single"
                  RowHeight="25"
                  BackgroundColor="Beige" 
                  IsVisible="true" >
                        
                  <ListView.Header>
                     <Grid Padding="0" RowSpacing="0" BackgroundColor="Black" HeightRequest="40">
                        <Grid.ColumnDefinitions>
                           <ColumnDefinition Width="5*" />
                           <ColumnDefinition Width="*" />
                           <ColumnDefinition Width="*" />
                           <ColumnDefinition Width="*" />
                           <ColumnDefinition Width="*" />
                           <ColumnDefinition Width="*" />
                           <ColumnDefinition Width="*" />
                           <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                           <RowDefinition Height="30" />
                        </Grid.RowDefinitions>

                        <Label Margin="0,0,0,0" Text="Batting" TextColor="White"  HorizontalOptions="Start" Grid.Column="0" FontAttributes="Bold" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="ab"  TextColor="LightGray"  Grid.Column="1" FontAttributes="Bold" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="r"  TextColor="LightGray"  Grid.Column="2" FontAttributes="Bold" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="h"  TextColor="LightGray"  Grid.Column="3" FontAttributes="Bold" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="bi"  TextColor="LightGray"   Grid.Column="4" FontAttributes="Bold" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="hr"  TextColor="LightGray"  Grid.Column="5" FontAttributes="Bold" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="bb"  TextColor="LightGray"  Grid.Column="6" FontAttributes="Bold" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="so"  TextColor="LightGray"  Grid.Column="7" FontAttributes="Bold" Style="{StaticResource LabelItem1}" />
                     </Grid>
                                
                  </ListView.Header>

                  <ListView.ItemTemplate>
                     <DataTemplate>
                        <ViewCell>
                           <Grid Padding="0" RowSpacing="0" BackgroundColor="Black">
                              <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="5*" />
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="*" />
                              </Grid.ColumnDefinitions>
                              <Grid.RowDefinitions>
                                 <RowDefinition Height="40" />
                              </Grid.RowDefinitions>

                              <Label Margin="0,0,0,0" Text="{Binding boxName}" HorizontalOptions="Start" Grid.Column="0" Style="{StaticResource LabelItem1}" />
                              <Label Margin="0,0,0,0" Text="{Binding ab}" Grid.Column="1" Style="{StaticResource LabelItem1}" />
                              <Label Margin="0,0,0,0" Text="{Binding r}" Grid.Column="2" Style="{StaticResource LabelItem1}" />
                              <Label Margin="0,0,0,0" Text="{Binding h}" Grid.Column="3" Style="{StaticResource LabelItem1}" />
                              <Label Margin="0,0,0,0" Text="{Binding bi}" Grid.Column="4" Style="{StaticResource LabelItem1}" />
                              <Label Margin="0,0,0,0" Text="{Binding hr}" Grid.Column="5" Style="{StaticResource LabelItem1}" />
                              <Label Margin="0,0,0,0" Text="{Binding bb}" Grid.Column="6" Style="{StaticResource LabelItem1}" />
                              <Label Margin="0,0,0,0" Text="{Binding so}" Grid.Column="7" Style="{StaticResource LabelItem1}" />

                           </Grid>

                        </ViewCell>
                     </DataTemplate>
                  </ListView.ItemTemplate>

               </ListView>

               <!--ListView #2 == Pitchers, Vis ============================ -->
               <Label Text="Red Sox" FontAttributes="Bold" FontSize="Large"/>
               <ListView 
                  x:Name= "lstPitBoxVis"
                  ItemsSource="{Binding PitcherBoxVis}" 
                  SelectionMode="None" 
                  RowHeight="25" 
                  BackgroundColor="Blue" >

                  <ListView.Header>
                            
                     <Grid Padding="0" RowSpacing="0" BackgroundColor="Black">
                        <Grid.ColumnDefinitions>
                           <ColumnDefinition Width="4.5*" />
                           <ColumnDefinition Width="1.5*" />
                           <ColumnDefinition Width="*" />
                           <ColumnDefinition Width="*" />
                           <ColumnDefinition Width="*" />
                           <ColumnDefinition Width="*" />
                           <ColumnDefinition Width="*" />
                           <!--<ColumnDefinition Width="*" />-->
                        </Grid.ColumnDefinitions>

                        <Label Margin="0,0,0,0" Text="Pitching" TextColor="LightGray"  HorizontalOptions="Start" Grid.Column="0" HeightRequest="30" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="ip"  TextColor="LightGray"  Grid.Column="1" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="h"  TextColor="LightGray"  Grid.Column="2" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="r"  TextColor="LightGray"  Grid.Column="3" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="er"  TextColor="LightGray"   Grid.Column="4" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="so"  TextColor="LightGray"  Grid.Column="5" Style="{StaticResource LabelItem1}" />
                        <Label Margin="0,0,0,0" Text="bb"  TextColor="LightGray"  Grid.Column="6" Style="{StaticResource LabelItem1}" />
                        <!--<Label Margin="0,0,0,0" Text="hr"  TextColor="LightGray"  Grid.Column="7" Style="{StaticResource LabelItem1}" />-->
                     </Grid>

                  </ListView.Header>

                  <ListView.ItemTemplate>
                     <DataTemplate>
                        <ViewCell>
                           <Grid Padding="0" RowSpacing="0" BackgroundColor="Black">
                              <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="4.5*" />
                                 <ColumnDefinition Width="1.5*" />
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="*" />

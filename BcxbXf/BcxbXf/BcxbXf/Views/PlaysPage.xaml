<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BcxbXf.Views.PlaysPage">
    <ContentPage.Content>

      <StackLayout Padding="10,50,10,0">

         <StackLayout Orientation="Horizontal" Padding="0,0,0,15">
            <Label Text="Steal:"></Label>
            <Switch x:Name="cmdSteal" Toggled="cmdSteal_Taggled" IsToggled="{Binding optSteal}"/>
         </StackLayout>

         <StackLayout Orientation="Horizontal" Padding="0,0,0,15">
            <Label Text="Sac Bunt:"></Label>
            <Switch x:Name="cmdSac" Toggled="cmdSac_Toggled" IsToggled="{Binding optSteal}"/>
         </StackLayout>

         <StackLayout Orientation="Horizontal">
            <Label Text="Intentional Pass:"></Label>
            <Switch x:Name="cmdIP" Toggled="cmdIP_Toggled" IsToggled="{Binding optSteal}"/>
         </StackLayout>

      </StackLayout>

    </ContentPage.Content>

</ContentPage>